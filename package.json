{
	"name": "cloudflare-hono-react",
	"scripts": {
		"dev:ui": "vite",
		"dev:server": "wrangler pages dev --live-reload",
		"dev": "concurrently \"bun run dev:ui\" \"bun run dev:server\"",
		"build": "vite build",
		"deploy": "bun run build && wrangler pages deploy dist",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"driz-gen-prod": "cross-env NODE_ENV=production drizzle-kit generate",
		"driz-mig-prod": "cross-env NODE_ENV=production drizzle-kit migrate",
		"driz-stu-prod": "cross-env NODE_ENV=production drizzle-kit studio",
		"lint": "biome check ./src",
		"format": "biome check --write ./src"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.4.2",
		"@kinde-oss/kinde-typescript-sdk": "^2.9.1",
		"@kinde/management-api-js": "^0.13.0",
		"@libsql/client": "^0.14.0",
		"@radix-ui/react-avatar": "^1.1.2",
		"@radix-ui/react-collapsible": "^1.1.2",
		"@radix-ui/react-dialog": "^1.1.4",
		"@radix-ui/react-dropdown-menu": "^2.1.4",
		"@radix-ui/react-separator": "^1.1.1",
		"@radix-ui/react-slot": "^1.1.1",
		"@radix-ui/react-tooltip": "^1.1.6",
		"@tanstack/react-form": "^0.40.4",
		"@tanstack/react-query": "^5.62.8",
		"@tanstack/react-router": "^1.87.9",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.0",
		"drizzle-zod": "^0.6.0",
		"hono": "^4.6.13",
		"lucide-react": "^0.469.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"resend": "^4.1.2",
		"tailwind-merge": "^2.5.5",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/workers-types": "^4.20241205.0",
		"@tanstack/router-devtools": "^1.87.9",
		"@tanstack/router-plugin": "^1.87.11",
		"@types/node": "^22.10.2",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^19.0.2",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.0",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.30.0",
		"lefthook": "^1.9.0",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.16",
		"vite": "^6.0.3",
		"wrangler": "^3.88.0"
	}
}
